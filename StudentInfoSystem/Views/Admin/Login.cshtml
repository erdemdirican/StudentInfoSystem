@model StudentInfoSystem.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

@{
    StudentInfoSystem.Database.Logins logonAdmin = (StudentInfoSystem.Database.Logins)Session["LogonAdmin"];
}

<div class="row">
    <div class="ml-auto mr-auto mt-3 text-center">
        @if (logonAdmin == null)
        {
            using (Html.BeginForm())
            {
                <div class="panel panel-success ">
                    <div class="panel-heading mb-3">
                        <h2 class="text-info">Login</h2>
                        @if (ViewBag.error != null && string.IsNullOrEmpty((string)ViewBag.error) == false)
                        {
                            <small style="color:red;">@ViewBag.error</small>
                        }
                        else
                        {
                            <small>Please enter your Username and Password</small>
                        }
                    </div>
                    <div class="panel-body">

                        <div class="form-group">
                            @Html.TextBoxFor(model => model.admin.Username, new { @class = "form-control", maxlength = "50", required = "required", placeholder = "Username" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.admin.Password, new { @class = "form-control", maxlength = "50", placeholder = "Password", type = "password" })
                        </div>
                    </div>
                    <div class="panel-footer panel-success text-center ">
                        <a class="btn btn-primary" href="~/Home/Index">Home Page</a>

                        <button type="submit" class="btn btn-success">
                            <span class="glyphicon glyphicon-log-in"></span> Login
                        </button>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="row">
                <div class="col-md-12 text-center" style="margin-top:20px;">
                    You are already logged in! You are being directed to the homepage!
                </div>
            </div>
            <meta http-equiv="Refresh" content="1;url=../Home" />
        }
    </div>
</div>
