
@model StudentInfoSystem.Database.Classes

@{
    ViewBag.Title = "New Class";
}

<h2 class="col-md-6 col-xs-6" style="font-size:20pt">New Class</h2>
<hr />

@using (Html.BeginForm("ClassCreate", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal col-md-offset-2">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class=" form-group">
            <div class="col-md-2 ">
                @Html.LabelFor(model => model.ClassName, "Class Name", htmlAttributes: new { @class = "control-label " })
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.ClassName, new { htmlAttributes = new { @class = "form-control", maxlength = "2", required = "required" } })
                @Html.ValidationMessageFor(model => model.ClassName, "Capital Letter", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </div>
    </div>
}



@if (TempData["resultInfo"] != null)
{


    @Html.Partial("InfoModal");

    <script>$('#exampleModalCenter').modal('show');</script>
}


